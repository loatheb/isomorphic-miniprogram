{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src": ["./src"],
      "client": ["./client"]
    },
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "types": ["node"],
    "target": "es2015"
  },
  "include": [
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}